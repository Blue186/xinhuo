
.banner{
  width: 100%;
  height: 295rpx;
}
.banner swiper{
  height: 100%;
  width: 100%;
}
.banner image{
  width: 100%;
  height: 295rpx;
}

.major .box{
  text-align: center;
  width: 23%;
}
.major .pic{
  width: 91rpx;
  height: 91rpx;
}
.major .txt{
  font-size: 26rpx;
}
.majorCon{
  display: flex;
  padding: 20rpx 0;
  width: 115%;
}

.works{
  background-color: #f0f3f8;
  padding: 70rpx 0 70rpx;
}
.wkMain{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.wkMain .box{
  width: 340rpx;
  height: 212rpx;
  margin-bottom: 10rpx;
  position: relative;
}
.wkMain .pic{
  width: 100%;
  height: 100%;
}
.wkMain .ceng{
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0, 0.35);
  position: absolute;
  top: 0;
  left: 0;
  color: #fff;
  text-align: center;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.wkMain .ceng .title{
  font-size: 34rpx;
}
.wkMain .ceng .des{
  opacity: 0.6;
  font-size: 26rpx;
  letter-spacing: 2rpx;
}

.dynamic{
  padding: 70rpx 0 70rpx;
}
.dyItem{
  display: flex;
  padding: 15rpx 0;
  border: 1rpx dashed #f4f4f4;
  justify-content: space-between;
}
.dyItem .pic{
  width: 30%;
}
.dyItem .pic image{
  width: 100%;
}
.dyItem .txt{
  width: 70%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.dyItem .title{
  font-size: 30rpx;
}
.dyItem .info{
  font-size: 26rpx;
  color: #888;
}
.dyItem text{
  font-size: 22rpx;
}

